<%- include ('header') -%>
    <header class='text-center'>
        <h1 class='color-blue'>Sign Up</h1>
        <span>Already have an account?</span>

        <a href="/" class='btn btn-primary btn-sm' type='button'>Log In</a>
        <p> Use google services to fill available form data</p>
        <div class="g-signin2" data-onsuccess="onSignIn" style='margin:10px 0 0 45%;'></div>
    </header>
    <form action='/api/register' method='POST' class='sign_in_form' id='new_account' style='border: none;'>
        <div class="new_user">

            <input type="hidden" name='id' value=''>
            <label for='name' class="form-label" style="font-weight: bold;">Name</label>
            <input name='name' class="form-control" id="name" value='' placeholder="Full Name" required>

            <label for='email' class="form-label" style="font-weight: bold;">Email</label>
            <input name='email' class="form-control" id="email" value='' placeholder="example@gmail.com" required>

            <label for='password' class="form-label ">Password</label>
            <input name='password' type="password" class="form-control " value='' id="password" required>

            <div class="form-group" style="margin:10px auto">
                <label for="gender" class="form-label" style="font-weight: bold;">Gender</label>
                <div class="radio inline">
                    <input type="radio" name='gender' id='gender' value='Male' style='margin:-40%'>

                    <label for="gender" class='form-label ' style='margin:-20px'>Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" name='gender' id='gender' value='Female' style='margin:-40%'>

                    <label for="gender" class='form-label ' style='margin:-20px'>Female</label>
                </div>

            </div>

            <button type='submit' class='btn btn-success border new_user'>save</button>

        </div>
        </div>
    </form>
    <script>
        function onSignIn(googleUser) {
            var profile = googleUser.getBasicProfile();
            document.getElementById('name').value = profile.getName(); // Do not send to your backend! Use an ID token instead.
            document.getElementById('email').value = profile.getEmail(); // This is null if the 'email' scope is not present.
        }
    </script>





